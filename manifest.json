{
  "manifest_version": 2,
  // "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "name": "Latex From Web",
  "description": "This extension add a button on Latex redered formulae in Web page to copy on fly the latex code. This hack works for Wikipedia.",
  "version": "1.0",
  "icons" : {
    "16" : "images/16-aico.png",
    "48" : "images/48-aico.png",
    "128" : "images/128-aico.png"
  },
  "web_accessible_resources" : [
    "style/*"
  ],
  "permissions": [
    "tabs", // to use tabs in injected scipt
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Open Options", //Latex From Web Copy
    "default_icon": {
      "19" : "images/19-iico.png",
      "38" : "images/38-iico.png"
    }
  },
  "options_page": "copy_latex_from_web_options.html",
  "options_ui": {
      "page": "copy_latex_from_web_options.html",
      "chrome_style": true
      //"open_in_tab": true
    },
  "background" : {
    "scripts": ["lib/jquery-1.12.3.min.js","lib/classes.js","background.js"] 
  }
}